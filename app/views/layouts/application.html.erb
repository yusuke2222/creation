<!DOCTYPE html>
<html>
<head>
  <title>Tsumamiyage</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
  <header class="header">
    <div class="header-logo">
      <h1 class="logo">
      <% if @current_user %>
        <%= link_to "つまみやげ", "/posts/index" %>
      <% else %>
        <%= link_to "つまみやげ", "/" %>
      <% end %>
      </h1>
    </div>
    <div class="header-list">
      <ul>
        <% if @current_user %>
          <li><%= link_to @current_user.name, "/users/#{@current_user.id}" %></li>
          <li><%= link_to "投稿する", "/posts/new" %></li>
          <li><%= link_to "投稿一覧", "" %></li>
          <li><%= link_to "ログアウト", "/logout", method: :post %></li>
        <% else %>
          <li>つまみやげとは</li>
          <li><%= link_to "新規登録", "/signup" %></li>
          <li><%= link_to "ログイン", "/login" %></li>
        <% end %>
        </ul>
    </div>
  </header>
    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>

<%= yield %>

  <footer>
    <p>
      Copyright Tsumamiyage 2018.
    </p>
  </footer>
  <script>
  $( document ).ready(function() {
    $('.flash').fadeOut(3000);
});
</script>
</body>
</html>
