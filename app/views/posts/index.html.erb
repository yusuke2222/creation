<div class="main-container">
  <div class="container-inner inner-default clearfix">
    <% @posts.each do |post| %>
    <div class="item-box">
      <div class="image">
        <div class="img-wrap">
            <img alt="image" src="<%= post.image %>">
        </div>
      </div>
      <div class="detail">
        <h3><%= link_to post.text, "/posts/#{post.id}" %></h3>
        <div class="flex fend">
          <img src="img/logo.png" alt="" width="20" height="20" class="post-user-icon">
          <div class="post-user-name">
            <%= link_to post.user.name, "/users/#{post.user.id}" %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <%= paginate(@posts) %>
</div>
